<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_id">
        <!-- 正三角 -->
        <rotate
            android:fromDegrees="40"
            android:toDegrees="60"
            android:pivotX="-80%"
            android:pivotY="80%">
            <shape>
                <solid android:color="#f0f0f0"/>
            </shape>
        </rotate>
    </item>
</layer-list>  